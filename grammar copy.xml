<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../print.xsl" ?>
<?xml-stylesheet type="text/css" href="../rules.css" 
title="Easy editing stylesheet" ?>

<rules lang="tl" xsi:noNamespaceSchemaLocation="../rules.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<category name="Sound and Letter Change">
		<rule id="DE_KAHON" name="de_kahon (de-kahon)">
			<pattern case_sensitive="no" mark_from="0">
				<token>de</token>
				<token>kahon</token>
			</pattern>
			<message><suggestion>\1-\2</suggestion></message>
			<short>Gitling</short>
			<example correction="de-kahon" type="incorrect"><marker>de kahon</marker></example>
			<example type="correct"><marker>de kahon</marker></example>
		</rule>
		<rule>
			<pattern case_sensitive="no" mark_from="0">
				<token regexp="yes">\b[A-Za-z]+\b</token>
				<token>tong</token>
			</pattern>
			<message><suggestion>'\2</suggestion><suggestion>i\2</suggestion></message>
			<short>Proper use of tong</short>
			<example correction="" type="incorrect"><marker>tong</marker></example>
			<example type="correct"></example>
		</rule>

		<!--Error 4 Sakin to sa akin-->
		<rule>
			<pattern case_sensitive="no" mark_from="0">
				<token regexp="yes">\b[A-Za-z]+\b</token>
				<token>sakin</token>
			</pattern>
			<message><suggestion>sa akin</suggestion></message>
			<short>Replace "sakin" with "sa akin"</short>
			<example correction="sa akin" type="incorrect"><marker>sakin</marker></example>
			<example type="correct">sa akin</example>
		</rule>

		<!--Error 6 Pwede to Puwede-->
		<rule>
			<pattern case_sensitive="no" mark_from="0">
				<token regexp="yes">\b[A-Za-z]+\b</token>
				<token>pwede</token>
			</pattern>
			<message><suggestion>puwede</suggestion></message>
			<short>Replace "pwede" with "puwede"</short>
			<example correction="puwede" type="incorrect"><marker>sakin</marker></example>
			<example type="correct">puwede</example>
		</rule>
		<!--Error 7 Lang to Lamang-->
		<rule>
			<pattern case_sensitive="no" mark_from="0">
				<token regexp="yes">\b[A-Za-z]+\b</token>
				<token>lang</token>
			</pattern>
			<message><suggestion>lamang</suggestion></message>
			<short>Use "lamang" instead of "lang"</short>
			<example correction="lamang" type="incorrect"><marker>sakin</marker></example>
			<example type="correct">lamang</example>
		</rule>
	</category>
	<category name="Word change based on context">
		<!--Error 5 Kung and Kapag-->
		<rule>
			<pattern case_sensitive="no" mark_from="0">
				<token regexp="yes">\bkapag\b</token>
				<token regexp="yes">\b(kung|kapag)\b</token>
			</pattern>
			<message><suggestion>Use "kapag" when sure (when) and "kapag" if unsure (if)</suggestion></message>
			<short>Distinguish between "kapag" and "kung"</short>
			<example correction="when" type="incorrect"><marker>Kung</marker> dumating ka, simula na tayo.</example>
			<example type="correct">Kapag dumating ka, simula na tayo.</example>
		</rule>
		

	</category>
</rules>
